<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_bg"
    android:padding="16dp"
    tools:context=".GameBoardActivity">


    <com.google.android.material.card.MaterialCardView
        android:id="@+id/timerContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="44dp"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/timerTv"
            style="@style/black32Bold"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingVertical="18dp"
            tools:text="05:32" />

    </com.google.android.material.card.MaterialCardView>

    <TextView
        android:id="@+id/playerTurnTv"
        style="@style/black32Bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:gravity="center"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/timerContainer"
        android:text="Player 1's Turn" />

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="24dp"
        app:cardCornerRadius="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/playerTurnTv">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/boardContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/blue"
            >

            <TextView
                android:id="@+id/btn1"
                style="@style/xStyle"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:gravity="center"
                android:onClick="onPlayerClick"
                android:tag="0"
                app:layout_constraintBottom_toTopOf="@+id/btn4"
                app:layout_constraintEnd_toStartOf="@+id/btn2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="x" />

            <TextView
                android:id="@+id/btn2"
                style="@style/xStyle"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:gravity="center"
                android:onClick="onPlayerClick"
                app:layout_constraintBottom_toTopOf="@+id/btn5"
                android:tag="1"
                app:layout_constraintEnd_toStartOf="@+id/btn3"
                app:layout_constraintStart_toEndOf="@+id/btn1"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="x" />

            <TextView
                android:id="@+id/btn3"
                style="@style/xStyle"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:gravity="center"
                android:onClick="onPlayerClick"
                app:layout_constraintBottom_toTopOf="@+id/btn6"
                android:tag="2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/btn2"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="x" />

            <TextView
                android:id="@+id/btn4"
                style="@style/xStyle"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:gravity="center"
                android:onClick="onPlayerClick"
                app:layout_constraintBottom_toTopOf="@+id/btn7"
                android:tag="3"
                app:layout_constraintEnd_toStartOf="@+id/btn5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btn1"
                tools:text="x" />

            <TextView
                android:id="@+id/btn5"
                style="@style/xStyle"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:gravity="center"
                android:onClick="onPlayerClick"
                app:layout_constraintBottom_toTopOf="@+id/btn8"
                android:tag="4"
                app:layout_constraintEnd_toStartOf="@+id/btn6"
                app:layout_constraintStart_toEndOf="@+id/btn4"
                app:layout_constraintTop_toBottomOf="@+id/btn2"
                tools:text="x" />

            <TextView
                android:id="@+id/btn6"
                style="@style/xStyle"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:gravity="center"
                android:onClick="onPlayerClick"
                app:layout_constraintBottom_toTopOf="@+id/btn9"
                android:tag="5"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/btn5"
                app:layout_constraintTop_toBottomOf="@+id/btn3"
                tools:text="x" />

            <TextView
                android:id="@+id/btn7"
                style="@style/xStyle"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:gravity="center"
                android:onClick="onPlayerClick"
                app:layout_constraintBottom_toBottomOf="parent"
                android:tag="6"
                app:layout_constraintEnd_toStartOf="@+id/btn8"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btn4"
                tools:text="x" />

            <TextView
                android:id="@+id/btn8"
                style="@style/xStyle"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:gravity="center"
                android:onClick="onPlayerClick"
                app:layout_constraintBottom_toBottomOf="parent"
                android:tag="7"
                app:layout_constraintEnd_toStartOf="@+id/btn9"
                app:layout_constraintStart_toEndOf="@+id/btn7"
                app:layout_constraintTop_toBottomOf="@+id/btn5"
                tools:text="x" />

            <TextView
                android:id="@+id/btn9"
                style="@style/xStyle"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:gravity="center"
                android:onClick="onPlayerClick"
                app:layout_constraintBottom_toBottomOf="parent"
                android:tag="8"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/btn8"
                app:layout_constraintTop_toBottomOf="@+id/btn6"
                tools:text="x" />


            <View
                android:id="@+id/verticalLine1"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/black"
                app:layout_constraintEnd_toEndOf="@id/verticalLine2"
                app:layout_constraintStart_toStartOf="parent" />

            <View
                android:id="@+id/verticalLine2"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/black"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/verticalLine1"

                />

            <View
                android:id="@+id/horizontalLine1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/black"
                app:layout_constraintBottom_toTopOf="@id/horizontalLine2"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:id="@+id/horizontalLine2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/black"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@id/horizontalLine1" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>